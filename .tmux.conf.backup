#设置前缀为Ctrl + [
set -g prefix C-a
set -sg escape-time 0

# let tmux use vi mode
setw -g mode-keys vi

# 与此同时，取消默认的前缀按键：

#解除Ctrl+b 与前缀的对应关系
#unbind C-b

# Set a Ctrl-b shortcut for reloading your tmux config
bind r source-file ~/.tmux.conf \; display "Reloaded!"

# Rename your terminals
set -g set-titles on
set -g set-titles-string '#(whoami)::#h::#(curl ipecho.net/plain;echo)'

# Status bar customization
set -g status-utf8 on
set -g status-bg black
set -g status-fg white
set -g status-interval 5
set -g status-left-length 200
set -g status-right-length 60
set -g status-left "#[fg=Green]#(whoami)#[fg=white]::#[fg=blue]#(hostname -s)#[fg=white]::##[fg=yellow]#(bash ~/.tmux.weather|cat| xargs)"
set -g status-justify left
#set -g status-right '#[fg=Cyan]#S #[fg=white]%ate] %d %b %R'
set -g status-right '#{prefix_highlight}|#{cpu_fg_color}CPU:#{cpu_icon}#{cpu_percentage}#[bg=black]:: %a %Y-%m-%d %H:%M'
# enable the mouse to selevt pane
# setw -g mode-mouse on
# set -g mouse-select-pane on

# Setting the delay between prefix and command
# START: delay
set -s escape-time 1
# END: delay

# Remap window navigation to vim
unbind-key j
bind-key j select-pane -D
unbind-key k
bind-key k select-pane -U
unbind-key h
bind-key h select-pane -L
unbind-key l
bind-key l select-pane -R

# resize panes
bind -r H resize-pane -L 5 
bind -r L resize-pane -R 5
bind -r J resize-pane -D 5
bind -r K resize-pane -U 5

# splitting panes
# START:panesplit
bind v split-window -h 
bind s split-window -v
# END:panesplit

# set -g history-limit 30000
# List of plugins
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'tmux-plugins/tmux-prefix-highlight'
set -g @plugin 'tmux-plugins/tmux-cpu'

# Other examples:
# set -g @plugin 'github_username/plugin_name'
# set -g @plugin 'git@github.com/user/plugin'
# set -g @plugin 'git@bitbucket.com/user/plugin'

# Initialize TMUX plugin manager (keep this line at the very bottom of tmux.conf)
run '~/.tmux/plugins/tpm/tpm'

# plugins
set -g @plugin 'tmux-plugins/tmux-resurrect'
